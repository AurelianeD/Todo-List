<h1>▶️ Me connecter</h1>

  <%= form_tag '/login' do %>
   <%= label_tag :username, 'Pseudo'%>
   <%= text_field_tag :username, placeholder: 'Pseudo'%>
   <%= label_tag :password, 'Mot de passe'%>
   <%= password_field_tag :password, placeholder: 'Mot de passe'%>
    <div class="column">
      <%= submit_tag "Me connecter" %>
    </div>
  <%end%>

<div class="links">
  <%= link_to "◀️ Retour à l'accueil", welcome_path %>
</div>
