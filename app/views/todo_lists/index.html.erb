<% if logged_in? %>
    <h1>👋 Hello <%= current_user.username %>!</h1>
<%end%>

<h1>🎯 Mes To-Do's</h1>

<% @todo_lists.each do |todo_list| %>

  <div class="index_row">
    <h2>▶️ <%= link_to todo_list.title, todo_list %></h2>
    <p><%= todo_list.description %></p>
  </div>

<% end %>

<div class="links">
  <%= link_to "✚ Ajouter une nouvelle To-Do liste", new_todo_list_path %>
  <%= button_to "Me déconnecter", logout_path, method: :delete %>
</div>
